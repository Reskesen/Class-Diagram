<Window x:Class="ClassDiagram.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClassDiagram.View"
        xmlns:ViewModel="clr-namespace:ClassDiagram.View_Model"
        xmlns:Shapes="clr-namespace:ClassDiagram.View.Shapes"
        mc:Ignorable="d"
        Title="Class Diagram" Height="500" Width="525">

    <Window.DataContext>
        <ViewModel:MainViewModel />
    </Window.DataContext>
    
    <Menu>
      
        <Shapes:Menu/>

        <WrapPanel>
         
            <Shapes:TopPanel/>

        </WrapPanel>

        <StackPanel Width="100">
            
            <Shapes:StackPanel/>

        </StackPanel>

        <Canvas Height="350" Width="350" Background="AliceBlue">

            <ItemsControl ItemsSource="{Binding Lines}"/>
            <ItemsControl ItemsSource="{Binding Shapes}"/>
            
        </Canvas>

    </Menu>

</Window>
